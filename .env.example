# Pioneer WYT Mini-Split Configuration
# Copy this file to .env and fill in your values

# Device credentials (from TinyTuya discovery + Tuya IoT)
TUYA_DEVICE_ID=your_device_id_here
TUYA_LOCAL_KEY=your_local_key_here
TUYA_DEVICE_IP=10.129.1.xxx
TUYA_PROTOCOL_VERSION=3.3

# Bridge service settings
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8000
BRIDGE_TOKEN=generate_a_secure_token_here

# Temperature settings
TEMP_UNIT=F

# Hubitat settings (for testing)
HUBITAT_IP=10.129.1.51
HUBITAT_MAKER_API_ID=your_maker_api_app_id
HUBITAT_MAKER_API_TOKEN=8503077c-c50c-40f6-8465-6fc039aa5f68

# Tuya IoT Cloud (only for localKey retrieval - optional)
# TUYA_ACCESS_ID=your_access_id
# TUYA_ACCESS_SECRET=your_access_secret
# TUYA_REGION=us
